DATABASE_URL="mongodb://localhost:27017/flint"
PORT=3001
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
NODE_ENV="development"

# CORS - Allow frontend and expo-admin
# Add your local IP for Expo development
FRONTEND_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://YOUR_LOCAL_IP:5173"

# --- AWS S3 (required for storing user photos) ---
# The app will use AWS S3 to upload and serve user photos. Add these to your .env when ready.

# AWS credentials (access keys for an IAM user with put/get/list permissions on the bucket)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 bucket and region
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=your-aws-region

